<html>
<div class = "jumbotron">
    
<center><h2>Listing Profiles</h2></center>
</div>
<br />
<div class = "form-group">
    <table align ="center">
        <tr>
        <th>Profile Name</th>
        <th>Profile ID </th>
        <th>Base_url</th>
        <th>Auth_type</th>
        <th>Edit</th>
        <th>Delete</th>
        <th colspan="3"></th>
    
        </tr>
  
  <% @profiles.each do |profile| %>
    <tr>
      <td><%= profile.name %></td>
      <td><%= profile.id %></td>
      <td><%= profile.base_url %></td>
      <td><%= profile.auth_type %></td>
      
      <td><%= link_to 'Edit', edit_profile_path(profile), class: "btn-btn-warning" %> <br/> </td>
      <td><%= link_to 'Delete ', [profile],
               method: :delete,
               data: { confirm: 'Are you sure?' } , class: "btn-btn-info" %></td>
    </tr>
   
  <% end %>
</table>

</div>
<br>

<center><%= link_to "Create New Profile",new_profile_path , class: "btn-btn-success"%> <br/><br/></center>
</div>
</html>